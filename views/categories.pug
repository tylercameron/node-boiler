extends layout

include mixins/_dealCard

block content
    //- #{h.dump(deals)}
    .inner
        h2= title
        ul.tags
            each category in categories
                li.tag
                    a.tag__link(href=`/categories/${category.slug}`)
                        span.tag__text= category.category
        .stores
            each deal in deals
                +dealCard(deal)  