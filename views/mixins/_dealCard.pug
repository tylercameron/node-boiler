mixin dealCard(deal = {})
    .store
        .store__hero
            h2.title
                a(href=`/deals/${deal.slug}`) #{deal.description}
        .store__details            
            h3 $#{deal.price}
            - let day = deal.day.slice(2, deal.day.length)
            h4= day
            h4= deal.store.name