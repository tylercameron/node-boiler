    #{h.dump(deal)}
    form(action=`/add-deal/${deal.id || ''}`, method="post")
        input(type="text" name="store" id="edit--store" value=(deal.store._id))
        //- label(for="name") Name
        //- input(type="text" name="name" id="store-name" value=(deal.store && deal.store.name) required)
        //- label(for="photo") Feature Image
        //-     input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
