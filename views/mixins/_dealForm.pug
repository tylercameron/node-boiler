        //-         img(src=`/uploads/${store.photo}`, alt=store.name width=200)
        label(for="url") Website URL (eg. "google.com")
        input(type="text" id="url" name="url")
        label(for="phone") Phone Number
        input(type="text" id="phone" name="phone")
        label(for="address") Address
        input(type="text" id="address" name="location[address]" required)
        input(type="text" id="lng" name="location[coordinates][0]")
        input(type="text" id="lat" name="location[coordinates][1]")
        
        label(for="day") Day of the Week
        select(name="day")
            option(value="1-Monday" selected) Monday
            option(value="2-Tuesday") Tuesday
            option(value="3-Wednesday") Wednesday
            option(value="4-Thursday") Thursday
            option(value="5-Friday") Friday
            option(value="6-Saturday") Saturday
            option(value="7-Sunday") Sunday
        label(for="price") Price
        input(type="number", name="price" min="0" step="0.01" placeholder="eg. 5.99")
        //- <input type="number" value="1000" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="currency" id="c1" />
        label(for="description") Deal Description
        textarea(name="description")
        label(for="category") Deal Category
        select(name="category")
            option(value=null selected) Select a Category
            each category in categories
                option(value=category.category) #{category.category}
        .reviewer__meta
