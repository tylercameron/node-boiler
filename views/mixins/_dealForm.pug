mixin dealForm(store)
    form(action=`/deals/${store._id}`, method="post")
        label(for="day") Day of the Week
        select(name="day")
            option(value="monday" selected) Monday
            option(value="tuesday") Tuesday
            option(value="wednesday") Wednesday
            option(value="thursday") Thursday
            option(value="friday") Friday
            option(value="saturday") Saturday
            option(value="sunday") Sunday
        label(for="price") Price
        input(type="number", name="price" min="0" data-number-to-fixed="2" data-number-stepfactor="100" placeholder="eg. 5.99")
        //- <input type="number" value="1000" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="currency" id="c1" />
        label(for="description") Deal Description
        textarea(name="description")
