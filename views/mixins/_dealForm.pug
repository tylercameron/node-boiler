    #{h.dump(categories)}
    form(action=`/add-deal`, method="post")
        label(for="name") Name
        input(type="text" name="name" id="store-name" required)
        //- label(for="photo") Feature Image
        //-     input(type="file" name="photo" id="photo" accept="image/gif, image/png, image/jpeg")
